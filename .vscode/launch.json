    "version": "0.2.0",
    "configurations": [
        {
            "name": "vsdbg rt cuda",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/_build_debug/ray_trace/rt_cuda.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "gdb rt cuda",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/_build_debug/ray_trace/rt_cuda",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "vsdbg chip8 opcode",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/_build_debug/chip8/chip8.exe",
            "args": ["10", "1", "test_opcode.ch8"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "vsdbg chip8 tetris",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/_build_debug/chip8/chip8.exe",
            "args": ["10", "3", "Tetris.ch8"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "externalTerminal"
        }
        

    ]
}